{
  "extends": "../../tsconfig.node.json",
  "compilerOptions": {
    "target": "ES2023",
    "baseUrl": ".",
    "paths": {},
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "incremental": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,

    "module": "CommonJS",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false
  },
  "include": ["src", "test", "src/prisma"]
}
