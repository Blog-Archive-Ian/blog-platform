{
  "name": "mono-repo",
  "private": true,
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@apps/web",
    "dev:bo": "turbo dev --filter=@apps/bo",
    "build": "turbo build",
    "lint": "turbo lint"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "turbo": "^2.7.6"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "pnpm -F @apps/web lint:fix"
    ],
    "packages/ui/**/*.{js,jsx,ts,tsx}": [
      "pnpm -F @blog/ui lint:fix",
      "pnpm -F @blog/ui format"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
